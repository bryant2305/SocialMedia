@using SocialMedia.Core.Application.ViewModels.Friends;
@model SaveFriendsViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="row">

    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>Esta seguro que desea eliminar este amigo?</h4>
            </div>
            <div class="card-body">

                <form method="post" asp-controller="Amigos" asp-action="DeletePost">

                    <input type="hidden" asp-for="IdFriend" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Amigos" asp-action="Index" class="btn btn-warning">Cancelar</a>

                </form>

            </div>
        </div>
    </div>

</div>
