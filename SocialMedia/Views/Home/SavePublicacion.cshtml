
@using SocialMedia.Core.Application.ViewModels.Comentarios
@using SocialMedia.Core.Application.ViewModels.Publicaciones;
@model SavePublicacionesViewModel
@{
    ViewData["Title"] = "Inicio";
    List<SavePublicacionesViewModel> postViews = ViewBag.UserPost;
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Guardar producto";
    }


    <div class="container-fluid">

        <div class="row">
            <div class="col-6 offset-3">
                <div class="card">
                    <div class="card-header bg-dark text-light">
                     <h4>@(editMode ? $"Editando publicacion:" : "Creando publicacion")</h4>
                    </div>
                    <div class="card-body">
                                   
                        <form method="post" asp-controller="Home" asp-action="@(editMode ? "Edit":"CreatePost")" enctype="multipart/form-data">

                            <div class="mb-3">
                                <label asp-for="File" class="form-label">Seleccione un archivo:</label>
                                <input asp-for="File" class="form-control" />

                                <span asp-validation-for="File" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Descripcion" class="form-label">Descripcion: </label>
                                <textarea asp-for="Descripcion" class="form-control"></textarea>
                            </div>


                            <input type="hidden" asp-for="Id" />

                            <button type="submit" class="btn btn-primary">Guardar</button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Volver atras</a>

                        </form>

                    </div>

                </div>
            </div>
        </div>

    </div>

